<div class="container">
  <%= notice %>
  <div class="row">

    <div class="col-xs-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover">

        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image_mini.jpg" %>
                <% end %>
              </td>
              <td><%=link_to book.title, book_path(book.id)%></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        <% end %>

      </table>
    </div>
  </div>
</div>



